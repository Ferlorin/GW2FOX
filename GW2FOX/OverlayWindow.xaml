<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GW2FOX"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="240" Height="370"
        ShowInTaskbar="False"
        Title="OverlayWindow"
        Name="MainOverlayWindow">

    <Grid x:Name="MainGrid" Background="Transparent">
        <Border Background="Transparent" BorderBrush="#333" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>

                <!-- Titelleiste -->
                <Grid Background="Transparent" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="Com"
                           Source="/Com.png"
                           Width="20" Height="20" Margin="6,5,4,5"
                           MouseLeftButtonDown="Icon_MouseLeftButtonDown"/>

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontWeight="Bold"
                               FontSize="14"
                               Text="Event Timer">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="0"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>

                <!-- Hauptinhalt -->
                <Grid Grid.Row="1">
                    <ScrollViewer x:Name="BossScrollViewer"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent">

                        <ListView x:Name="BossListView"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  FontFamily="Segoe UI"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  Margin="0"
                                  Padding="0"
                                  ItemContainerStyle="{StaticResource {x:Type ListViewItem}}">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0"
                                                VerticalAlignment="Center"
                                                Height="32">
                                        <Image Source="{x:Static local:BossListItem.WaypointImage}"
                                               Width="20" Height="20" Margin="0,0,8,0"
                                               Cursor="Hand"
                                               MouseLeftButtonDown="Waypoint_MouseLeftButtonDown"
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding BossName}"
                                                   Foreground="{Binding CategoryBrush}"
                                                   Width="100"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                                            </TextBlock.Effect>
                                        </TextBlock>

                                        <TextBlock Text="{Binding TimeRemainingFormatted}"
                                                   Foreground="LightGray"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,0,0">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>

                <!-- Untere Linie -->
                <Rectangle Grid.Row="2" Height="3" Fill="White" Opacity="0.4" VerticalAlignment="Bottom"/>

                <!-- Kopiert-Benachrichtigung -->
                <TextBlock x:Name="CopiedMessage"
                           Text="Copied!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"
                           Background="Black"
                           Foreground="White"
                           FontWeight="Bold"
                           Opacity="0.9"
                           Visibility="Collapsed"
                           FontSize="14"
                           Grid.Row="1">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>

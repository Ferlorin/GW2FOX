<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GW2FOX"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="240" Height="370"
        ShowInTaskbar="False"
        Title="OverlayWindow"
        Name="MainOverlayWindow">

    <Grid x:Name="MainGrid" Background="Transparent">
        <Border Background="Transparent" BorderBrush="#333" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titel -->
                <Grid Background="Transparent" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="Com"
                           Source="/Com.png"
                           Width="20" Height="20" Margin="6,5,4,5"
                           MouseLeftButtonDown="Icon_MouseLeftButtonDown"/>

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontWeight="Bold"
                               FontSize="14"
                               Text="Event Timer">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Rectangle VerticalAlignment="Bottom"
           Grid.ColumnSpan="2"
           Height="1"
           IsHitTestVisible="False"
           Margin="0,0,0,0">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00FFFFFF" Offset="0.0" />
                                <GradientStop Color="#66FFFFFF" Offset="0.5" />
                                <GradientStop Color="#00FFFFFF" Offset="1.0" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>


                </Grid>

                <!-- Inhalt -->
                <Grid Grid.Row="1">
                    <ScrollViewer x:Name="BossScrollViewer"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent">

                        <ListView x:Name="BossListView"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  FontFamily="Segoe UI"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Padding="0"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                Background="Transparent">
                                        <Image Source="{x:Static local:BossListItem.WaypointImage}"
                                               Width="20" Height="20" Margin="0,0,6,0"
                                               Cursor="Hand"
                                               MouseLeftButtonDown="Waypoint_MouseLeftButtonDown"
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding BossName}"
                                                   Foreground="{Binding CategoryBrush}"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Width="150"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                                            </TextBlock.Effect>
                                        </TextBlock>

                                        <TextBlock Text="{Binding TimeRemainingFormatted}"
                                                   Foreground="{Binding CategoryBrush}"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="1,0,0,0">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                    <!-- Kopiert-Meldung -->
                    <TextBlock x:Name="CopiedMessage"
                               Text="Copied!"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"
                               Padding="6,2"
                               Background="Black"
                               Foreground="White"
                               FontWeight="Bold"
                               Opacity="0.9"
                               Visibility="Collapsed"
                               FontSize="14">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" Direction="0" ShadowDepth="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#FF010101"
        Topmost="True"
        ResizeMode="NoResize"
        Width="280" Height="400"
        ShowInTaskbar="False"
        Title="OverlayWindow">

    <Border CornerRadius="8" Background="#FF010101" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid Height="30" Background="#222" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Resources/eventicon.png" Width="20" Height="20" Margin="6,5,4,5"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14" Text="Weltevent"/>
                <Button Grid.Column="2" Content="▁" Width="24" Height="24" Margin="4" Click="Minimize_Click"/>
                <Button Grid.Column="3" Content="🞬" Width="24" Height="24" Margin="4" Click="Close_Click"/>
            </Grid>
            <Grid Margin="0,30,0,0"/>
        </Grid>
    </Border>
</Window>

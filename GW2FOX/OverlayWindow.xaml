<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GW2FOX"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="260" Height="400"
        ShowInTaskbar="False"
        Title="OverlayWindow">

    <Grid>
        <Border CornerRadius="8" Background="Transparent" BorderBrush="#333" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titelleiste -->
                <Grid Background="Transparent" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="Com"
                           Source="/Com.png"
                           Width="20" Height="20" Margin="6,5,4,5"
                           MouseLeftButtonDown="Icon_MouseLeftButtonDown"/>

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="14"
                               FontFamily="Segoe UI"
                               Text="Event Timer">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="0"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>

                <!-- Hauptinhalt -->
                <Grid Grid.Row="1">
                    <ListView x:Name="BossListView"
                              BorderThickness="0"
                              Background="Transparent"
                              Margin="2,0,2,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2" VerticalAlignment="Center">
                                    <!-- ICON -->
                                    <Image Source="{x:Static local:BossListItem.WaypointImage}"
                                           Width="22" Height="22" Margin="0,0,8,0"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="Waypoint_MouseLeftButtonDown"
                                           VerticalAlignment="Center"/>

                                    <!-- Bossname -->
                                    <TextBlock Text="{Binding BossName}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               FontFamily="Segoe UI"
                                               Foreground="{Binding CategoryBrush}"
                                               Width="100"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black"
                                                              BlurRadius="0"
                                                              Direction="0"
                                                              ShadowDepth="0"
                                                              Opacity="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>

                                    <!-- Timer -->
                                    <TextBlock Text="{Binding TimeRemainingFormatted}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               FontFamily="Segoe UI"
                                               Foreground="{Binding CategoryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"
                                               TextAlignment="Right">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black"
                                                              BlurRadius="0"
                                                              Direction="0"
                                                              ShadowDepth="0"
                                                              Opacity="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <!-- Kopiert-Benachrichtigung -->
                <TextBlock x:Name="CopiedMessage"
                           Text="Copied!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"
                           Padding="6,2"
                           Background="Black"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"
                           FontFamily="Segoe UI"
                           Opacity="0.9"
                           Visibility="Collapsed"
                           Grid.Row="1">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="0"
                                          Direction="0"
                                          ShadowDepth="0"
                                          Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>

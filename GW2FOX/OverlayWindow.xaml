<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GW2FOX"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="250" Height="370"
        ShowInTaskbar="False"
        Title="OverlayWindow"
        Name="MainOverlayWindow">

    <!-- Globale Ressourcen -->
    <Window.Resources>
        <local:StrikeConverter x:Key="StrikeConverter"/>
        <local:PastEventColorConverter x:Key="PastEventColorConverter"/>
        <local:ItalicConverter x:Key="ItalicConverter"/>
        <DropShadowEffect x:Key="TextShadow" Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
        <ControlTemplate x:Key="EmptyButtonTemplate" TargetType="RepeatButton">
            <Grid/>
        </ControlTemplate>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="Transparent">
        <Border Background="Transparent" BorderBrush="#333" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TITEL -->
                <Grid Background="Transparent" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="Com"
                           Source="/Com.png"
                           Width="20" Height="20" Margin="6,5,4,5"
                           MouseLeftButtonDown="Icon_MouseLeftButtonDown"/>

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontWeight="Bold"
                               FontSize="14"
                               Text="Event Timer">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Height="1" IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00FFFFFF" Offset="0.0" />
                                <GradientStop Color="#66FFFFFF" Offset="0.5" />
                                <GradientStop Color="#00FFFFFF" Offset="1.0" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>

                <!-- INHALT + SCROLLBAR -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer x:Name="BossScrollViewer"
                                  Grid.Column="0"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent"
                                  ScrollChanged="BossScrollViewer_ScrollChanged">

                        <ListView x:Name="BossListView"
                                  ItemsSource="{Binding OverlayItems}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  FontFamily="Segoe UI"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Padding="0"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#22000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Opacity="{Binding Opacity}" Margin="2,2,2,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Waypoint -->
                                        <Image Grid.Column="0"
                                               Source="{x:Static local:BossListItem.WaypointImage}"
                                               Width="20" Height="20"
                                               Margin="0,0,6,0"
                                               Cursor="Hand"
                                               MouseLeftButtonDown="Waypoint_MouseLeftButtonDown"
                                               VerticalAlignment="Center"/>

                                        <!-- Bossname -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding BossName}"
                                                   Foreground="{Binding CategoryBrush}"
                                                   FontStyle="{Binding IsConcurrentEvent, Converter={StaticResource ItalicConverter}}"
                                                   TextDecorations="{Binding IsPastEvent, Converter={StaticResource StrikeConverter}}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Effect="{StaticResource TextShadow}"/>

                                        <!-- Zeit -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding TimeRemainingFormatted}"
                                                   Foreground="{Binding CategoryBrush}"
                                                   FontStyle="{Binding IsConcurrentEvent, Converter={StaticResource ItalicConverter}}"
                                                   TextDecorations="{Binding IsPastEvent, Converter={StaticResource StrikeConverter}}"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"
                                                   Effect="{StaticResource TextShadow}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                    <!-- Scrollbar -->
                    <ScrollBar Orientation="Vertical"
                               Grid.Column="1"
                               Width="12"
                               Minimum="0"
                               Maximum="{Binding ElementName=BossScrollViewer, Path=ScrollableHeight}"
                               Value="{Binding ElementName=BossScrollViewer, Path=VerticalOffset, Mode=OneWay}"
                               ViewportSize="{Binding ElementName=BossScrollViewer, Path=ViewportHeight}"
                               ValueChanged="ManualScrollBar_ValueChanged">
                        <ScrollBar.Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollBar">
                                            <Grid Background="Transparent">
                                                <Track Name="PART_Track" IsDirectionReversed="true">
                                                    <Track.Thumb>
                                                        <Thumb Height="40" Width="12"
                                                               Background="#88FFFFFF"
                                                               BorderBrush="#44FFFFFF"
                                                               BorderThickness="1">
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="6"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Height="0" Width="0"
                                                                      Template="{StaticResource EmptyButtonTemplate}"/>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Height="0" Width="0"
                                                                      Template="{StaticResource EmptyButtonTemplate}"/>
                                                    </Track.DecreaseRepeatButton>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ScrollBar.Style>
                    </ScrollBar>

                    <!-- Kopiert-Meldung -->
                    <TextBlock x:Name="CopiedMessage"
                               Text="Copied!"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"
                               Padding="6,2"
                               Background="Black"
                               Foreground="White"
                               FontWeight="Bold"
                               Opacity="0.9"
                               Visibility="Collapsed"
                               FontSize="14">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
<Window x:Class="GW2FOX.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="280" Height="400"
        ShowInTaskbar="False"
        Title="OverlayWindow">

    <Border CornerRadius="8" Background="Transparent" BorderBrush="#333" BorderThickness="0">
        <Grid>
            <!-- Layout mit zwei Zeilen -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titelleiste mit transparentem Hintergrund (kein Event-Handler mehr) -->
            <Grid Background="Transparent" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="Com" Source="/Com.png"
                       Width="20" Height="20" Margin="6,5,4,5"
                       MouseLeftButtonDown="Icon_MouseLeftButtonDown"/>

                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontWeight="Bold"
                           FontSize="14"
                           Text="Event Timer">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="0"
                                          Direction="0"
                                          ShadowDepth="0"
                                          Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <!-- Inhalt (unter Titelleiste) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="93*"/>
                    <ColumnDefinition Width="185*"/>
                </Grid.ColumnDefinitions>

                <!-- WindowsFormsHost für die ListView -->
                <wfi:WindowsFormsHost Name="listViewHost" Grid.ColumnSpan="2"/>
            </Grid>
        </Grid>
    </Border>
</Window>
